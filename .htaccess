

# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php80” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php80 .php .php8 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit

# --- Seguridad extra ---

# Bloquear acceso público a keys.php (y otros archivos sensibles)
<FilesMatch "^(keys\.php|\.env|composer\.(json|lock)|package\.json|yarn\.lock)$">
  <IfModule mod_authz_core.c>   # Apache 2.4+
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>  # Apache 2.2 fallback
    Order allow,deny
    Deny from all
  </IfModule>
</FilesMatch>

# 2 Desactivar listado de directorios
Options -Indexes


# Permitir solo POST en form.php (evita accesos GET directos)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_URI} /form\.php$ [NC]
  RewriteCond %{REQUEST_METHOD} !POST
  RewriteRule ^ - [F]
</IfModule>

